{
  "Serilog": {
    "LevelSwitches": {
      "$controlSwitch": "Verbose"
    },
    "MinimumLevel": {
      "ControlledBy": "$controlSwitch"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "PostgreSql",
        "Args": {
          "connectionString": "User ID=serilog;Password=serilog;Host=localhost;Port=5432;Database=serilog;",
          "tableName": "ContactApp",
          "schemaName": null,
          "needAutoCreateTable": true,
          "loggerColumnOptions": {
            "Id": "IdAutoIncrement",
            "TimeStamp": "Timestamp",
            "LogEvent": "Properties"
          },
          "simpleColumnOptions": {},
          "period": "0.00:00:30",
          "batchSizeLimit": 50
        }
      }
    ]
  }
}